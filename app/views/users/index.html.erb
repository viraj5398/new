<%= content_for :page_title, "Users" %>


<section class="section">
	<div class="container">
		<%= @users.each do |user| %>
			<div class="card">
				<div class="card-content">
					<div class="media">
						<div class="media-content">
							<p class="title is-4"><%= link_to user.first_name, user %></p>
						</div>
					</div>
					<div class="firstname">
						<%= user.first_name %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</section>
