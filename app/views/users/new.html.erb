<%= content_for :page_title, "Create New User" %>


<div class="section">
	<%= simple_form_for @user do |f| %>
	<div class="field">
		<div class="control">
			<%= f.input :first_name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
		</div>
	</div>
	<div class="field">
		<div class="control">
			<%= f.input :last_name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
		</div>
	</div>
	<div class="field">
		<div class="control">
			<%= f.input :email, input_html: { class: 'email' }, wrapper: false, label_html: { class: 'label'} %>
		</div>
	</div>
	<div class="field">
		<div class="control">
			<%= f.input :password, input_html: { class: 'password' }, wrapper: false, label_html: { class: 'label'} %>
		</div>
	</div>		
	<%= f.button :submit, 'create new user', class: "button is-primary" %>
	<% end %>
</div>